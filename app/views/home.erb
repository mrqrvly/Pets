
<div class="container">
  <div class="row">

    <div class="col-12 push-3">
      <h2>Log In</h2>
      <h3><%= @log_message %></h3>
      <form class="login" method="post" action="/login">
          <input type="text" name="username" placeholder="Username" />
          <br />
          <input type="password" name="password" placeholder="Password" />
          <br />
          <button type="submit">Log in</button>
      </form>
    </div>

    <div class="col-6">
      <h2>Sign Up</h2>
      <h3><%= @sign_message %></h3>
      <form class="signup" method="post" action="/signup">
          <input type="text" name="username" placeholder="Choose a Username" />
          <br />
          <input type="password" name="password" placeholder="Choose a Password" />
          <br />
          <input type="password" name="firstname" placeholder="Enter your first name" />
          <br />
          <input type="password" name="lastname" placeholder="Enter your last name" />
          <br />
          <button type="submit">Sign Up</button>
      </form>
    </div>
    
  </div>
</div>



